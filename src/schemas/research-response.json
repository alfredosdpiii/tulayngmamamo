{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "A concise summary of the research findings (2-4 sentences)"
    },
    "findings": {
      "type": "array",
      "description": "Key findings from the research",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "code_references": {
            "type": ["array", "null"],
            "items": { "type": "string" },
            "description": "Relevant file:line references"
          }
        },
        "required": ["title", "description", "code_references"],
        "additionalProperties": false
      }
    },
    "recommendations": {
      "type": ["array", "null"],
      "description": "Actionable recommendations based on findings",
      "items": { "type": "string" }
    },
    "concerns": {
      "type": ["array", "null"],
      "description": "Any concerns or issues discovered",
      "items": { "type": "string" }
    },
    "code_snippets": {
      "type": ["array", "null"],
      "description": "Relevant code examples if applicable",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": ["string", "null"] },
          "language": { "type": ["string", "null"] },
          "code": { "type": "string" },
          "explanation": { "type": ["string", "null"] }
        },
        "required": ["file", "language", "code", "explanation"],
        "additionalProperties": false
      }
    }
  },
  "required": ["summary", "findings", "recommendations", "concerns", "code_snippets"],
  "additionalProperties": false
}
